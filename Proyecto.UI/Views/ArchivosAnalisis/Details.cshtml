@model ArchivoAnalisis

<h2>Detalles del Archivo de Análisis</h2>

<div class="form-group">
    <label>Nombre:</label>
    <p>@Model.Nombre</p>
</div>

<div class="form-group">
    <label>Texto del Archivo:</label>
    <textarea class="form-control" rows="10" readonly>@Model.TextoDelArchivo</textarea>
</div>

<div class="form-group">
    <label>Fuente:</label>
    <p>@Model.Fuente</p>
</div>

<div class="form-group">
    <label>Fecha de Registro:</label>
    <p>@Model.FechaDeRegistro.ToString("dd/MM/yyyy HH:mm")</p>
</div>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
